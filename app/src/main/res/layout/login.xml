<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main_login"
android:background="#ffffff"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.chris.coshare.MainActivity">

    <Button
        android:text="Submit"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#7ac143"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/submitB"
        android:onClick="submithere"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:radius="12dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="60dp"
        android:ems="12"
        android:id="@+id/inputPw"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignBottom="@+id/submitB"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/inputUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputPw"
        android:layout_alignLeft="@+id/inputPw"
        android:ems="12"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/cosharelogo"
        android:scaleType="fitCenter"
        android:layout_width="500dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_height="200dp" />


    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/inputPw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="#7ac143"
        android:background="@null"
        android:onClick="registerhere"
        android:text="No account? Register Here" />




</RelativeLayout>
